<div class="row">
      <div class="col-20 offset-1 content_mailer">
            <%= render '/layouts/errors', obj: @contact %>
            <table class="table table-striped">
                  <tbody>
                        <tr>
                              <th class="col-xs-2">メアド</th>
                              <td><%= @contact.email %></td>
                        </tr>
                        <tr>
                              <th class="col-xs-2">本文</th>
                              <td><%= @contact.message %></td>
                        </tr>
                        <tr>
                              <th class="col-xs-2">問合せ日時</th>
                              <td><%= @contact.created_at.to_s(:datetime_jp) %></td>
                        </tr>
                        <tr>
                              <th class="col-xs-2">種別</th>
                              <td><%= @contact.category %></td>
                        </tr>
                        <tr>
                              <th class="col-xs-2">返信有無</th>
                              <td>
                                    <% if @contact.reply == true %>
                                          <i class="fas fa-check"></i>
                                    <% else %>
                                          <i class="fas fa-comment-slash"></i>
                                    <% end %>
                              </td>
                        </tr>
                        <tr>
                              <th class="col-xs-2">ステータス</th>
                              <td><%= @contact.status %></td>
                        </tr>
                  </tbody>
            </table>
            <%= form_with model: @contact, url: admins_contact_path(@contact), local: :true, method: :patch do |f| %>
                  <%= f.select :status, [["未対応","0"],["審議中","1"],["対応済み","2"]] %>
                  <%= f.submit "変更" %>
            <%  end %>
      </div>
</div>