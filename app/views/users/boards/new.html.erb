<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_with url: user_boards(@board), local: :true, html: {method: :post}, html: {class: 'form-horizontal'})do |f| %>
                <form class="form-horizontal">
                    <div class="form-inline">
                        <%= f.label :title, 'タイトル' %>
                        <%= f.text_field :title %>
                    </div>
                    <div class="form-inline">
                        <%= f.label :introduction, '紹介分' %>
                        <%= f.text_field :introduction %>
                    </div>
                <%= f.submit "送信" %>
            <% end %>
        </div>
    </div>
</div>