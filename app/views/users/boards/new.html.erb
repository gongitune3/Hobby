<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_with model: @board, url: users_boards_path, local: :true, class: 'form-horizontal' do |f| %>
                <form class="form-horizontal">
                    <div class="form-inline">
                        <%= f.label :title, 'タイトル' %>
                        <%= f.text_field :title %>
                    </div>
                    <div class="form-inline">
                        <%= f.label :introduction, '紹介分' %>
                        <%= f.text_field :introduction %>
                    </div>
                        <%= f.fields_for :tag_list, @board.tags.build do |tag| %>
                            <%= f.label :name, 'タグ入力  ,で区切って入力してください' %>
                            <%= tag.text_field :name %>
                        <% end %>
                <%= f.submit "送信" %>
            <% end %>
        </div>
    </div>
</div>

