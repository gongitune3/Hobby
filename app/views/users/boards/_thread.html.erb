<table class="table table-borderless">
        <% board_comments.each do |board_comment| %> 
                <tr>
                    <td>
                        <%= link_to users_user_path(board_comment.user) do %>
                            <%= attachment_image_tag board_comment.user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", size: "50x50" %><br>
                            <%= board_comment.user.nickname %>
                        <% end %>
                    </td>
                    <td>
                        <%= board_comment.created_at.strftime("%Y-%m-%d %H:%M") %>
                    </td>
                    <td><%= board_comment.comment %></td>
                        <% if board_comment.user == current_user %>
                            <td><%= link_to '削除', users_board_comment_path(board_comment), class: 'btn-sm btn-danger', method: :delete, local: true %></td>
                        <% end %>
                    <td>
                        <% if user_signed_in? %>
                            <% if board_comment.favorited_by?(current_user) %>
                                <% favorite = board_comment.favorites.find_by(user_id: current_user.id) %>
                                <%= link_to users_favorite_path(favorite.id), method: :delete, remote: true do %>
                                    <i class="fas fa-heart"><%= board_comment.favorites.count%></i>
                                <% end %>
                            <% else %>
                                <%= link_to users_board_comment_favorites_path(board_comment.id), method: :post, remote: true do %>
                                    <i class="far fa-heart"><%= board_comment.favorites.count %></i>
                                <% end %>
                            <% end %>
                        <% else %>
                            <i class="far fa-heart"><%= board_comment.favorites.count %></i>
                        <% end %>
                    </td>
                </tr>
        <% end %>
</table>


