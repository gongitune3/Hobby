<% board_comments.each do |board_comment| %> 
    <table>
        <tr>
            <td>
                <%= link_to users_user_path(board_comment.user), class: "user_#{board_comment.user.id}" do %>
                    <%= attachment_image_tag board_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
                    <%= board_comment.user.nickname %>
                <% end %>
            </td>
            <td><%= board_comment.comment %></td>
                <% if board_comment.user == current_user %>
                    <td><%= link_to '削除', users_board_comment_path(board_comment), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
                <% end %>
            <td>
                <% if board_comment.favorited_by?(current_user) %>
                    <% favorite = board_comment.favorites.find_by(user_id: current_user.id) %>
                    <%= link_to users_favorite_path(favorite.id), method: :delete, remote: true do %>
                        <span class="glyphicon glyphicon-heart"><%= board_comment.favorites.count%></span>
                    <% end %>
                <% else %>
                    <%= link_to users_board_comment_favorites_path(board_comment.id), method: :post, remote: true do %>
                        <span class="glyphicon glyphicon-heart-empty"><%= board_comment.favorites.count %></span>
                    <% end %>
                <% end %>
            </td>
        </tr>
    </table>
<% end %>