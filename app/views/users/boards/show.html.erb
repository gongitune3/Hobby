    <div class="row">
        <div class="col-md-8 offset-1 fix">
            <h5 class="mb-2">スレッド内レス数：<%= @board.board_comments.count %></h5>
            <% if user_signed_in? %>
                <% if @board.bookmark_by?(current_user) %>
                <i>ブックマーク数:</i>
                    <%= link_to users_board_bookmarks_path(@board.id), method: :delete, remote: true do %>
                        <span class="fas fa-bookmark"><%= @board.bookmarks.count %></span>
                    <% end %>
                <% else %>
                    <i>ブックマーク数:</i>
                    <%= link_to users_board_bookmarks_path(@board.id), method: :post, remote: true do %>
                        <span class="far fa-bookmark-empty"><%= @board.bookmarks.count %></span>
                    <% end %>
                <% end %>
            <% else %>
            <i>ブックマーク数:</i>
                <span class="fas fa-bookmark"><%= @board.bookmarks.count %></span>
            <% end %>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-10 offset-1">
            <div class="row">
                <div class="col-md-8">
                    <h2 style="display:inline-block"><%= @board.title %></h2>
                    <i class="ml-2">タグ:</i>
                    <% @tags.each do |tag| %>
                        <%= link_to tag.name, users_tags_path(tag: tag.name) %>
                    <% end %>
                    <% if user_signed_in? %>
                        <% if @board.user_id == current_user.id %>
                            <button type="button" class="btn btn-danger ml-2" data-toggle="modal" data-target="#modal1">
                                スレッド削除
                            </button>
                                <div class="modal fade" id="modal1" tabindex="-1"
                                    role="dialog" aria-labelledby="label1" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="label1">スレッドを削除しますか？</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                スレッドを削除しますと、復元ができません。<br>
                                                宜しければ下記の削除のボタンをクリックしてください。
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
                                                <%= link_to users_board_path(@board.id), method: :delete do %>
                                                    <button type="button" class="btn btn-danger">削除</button>
                                                <% end %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        <% end %>
                    <% end %>
                </div>
                <div class="col-md-1 ">
                    <a class="bottom-btn" href="#bottom"><span class="fas fa-arrow-circle-down fa-3x" ></span></a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        
        <div class="col-md-7">
            <p class="board-introduction"><%= @board.introduction %></p>
        </div>
    </div>
    <div class="row">
        <%= render 'users/boards/thread', board_comments: @board.board_comments %>
    </div>
    
    <div class="row">
        <% if user_signed_in? %>
            <div class="comment-form" id="bottom">
                <%= form_with model:[@board, @board_comment], url: users_board_board_comments_path(@board.id), local: true, method: :post do |f| %>
                    <%= f.text_area :comment, size: "60x4", class: "mt-5", placeholder: "空欄ではコメントできません。" %>
                    <%= f.submit '送信' %>
                <% end %>
            </div>
        <% end %>
    </div>
    <div class="row">
        <div class="col-md-5">
            <p id="back-top">
                <a href="#top"><span class="fas fa-arrow-circle-up fa-3x"></span></a>
            </p>
            <%# 実装未定 %>
            <%# <%= link_to "スレッド参加ユーザー一覧", path %>
        </div>
    </div>
