    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2><%= @board.title %></h2>
            <% @tags.each do |tag| %>
                <%= link_to tag.name, users_boards_path %>
            <% end %>

            <% if @board.user_id = current_user %>
                <%= link_to edit_users_board_path(@board.id), remote: true do %>
                    <i class="fas fa-edit">編集</i>
                <% end %>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal1">
                    スレッド削除
                </button>
                    <div class="modal fade" id="modal1" tabindex="-1"
                        role="dialog" aria-labelledby="label1" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="label1">スレッドを削除しますか？</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                スレッドを削除しますと、復元ができません。<br>
                                宜しければ下記の削除のボタンをクリックしてください。
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
                                <%= link_to users_board_path(@board.id), method: :delete, remote: true do %>
                                    <button type="button" class="btn btn-danger">削除</button>
                                <% end %>
                            </div>
                        </div>
                    </div>
                    </div>
            <% end %>
            <% if @board.bookmark_by?(current_user) %>
                <%= link_to users_board_bookmarks_path(@board.id), method: :delete, remote: true do %>
                    <span class="fas fa-bookmark"><%= @board.bookmarks.count %></span>
                <% end %>
            <% else %>
                <%= link_to users_board_bookmarks_path(@board.id), method: :post, remote: true do %>
                    <span class="far fa-bookmark-empty"><%= @board.bookmarks.count %></span>
                <% end %>
            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 col-md-offset-3">
            <p><%= @board.introduction %></p>
        </div>
    </div>
    <div class="row">
        <%= render 'thread', board_comments: @board.board_comments %>
    </div>
    
    <div class="row">
        <div class="comment-form">
            <%= form_with model:[@board, @board_comment], url: users_board_board_comments_path(@board.id), local: true, method: :post do |f| %>
                <%= f.text_area :comment, size: "60x5" %>
                <%= f.submit '送信' %>
            <% end %>
        </div>
    </div>
    <div class="row">
        
    </div>
