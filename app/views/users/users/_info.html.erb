 <div class="col-md-8">
            <table class='table'>
                <tr>
                    <%= image_path("no_image.jpg") %>
                </tr>
                <tr>
                    <i>ハンドルネーム：</i><%= user.nickname %>
                </tr>
                <tr>
                    <p class="mt-3 ml-3">/自己紹介/</p>
                    <p class="ml-3"><%= user.introduction %></p>
                </tr>
                <tr>
                    <th>follows</th>
                    <th><%= link_to user.follower.count, users_user_follows_path(user) %></th>
                </tr>
                <tr>
                    <th>followers</th>
                    <th><%= link_to user.followed.count, users_user_followers_path(user) %></th>
                </tr>
                <tr>
                    <th>bookmarks</th>
                    <th><%= link_to user.bookmarks.count, users_user_bookmarks_path(user) %></th>
                </tr>
            </table>
        </div>
        <!-- フォローボタン -->
            <% if current_user != user %>
                <div id="follew_btn_<%= user.id %>">
                    <%= render 'follow', user: user %>
                </div>
            <% end %>
</div>
    <% if @user == current_user %>
        <div class='row'>
            <div class="col-md-3">
                <%= link_to '編集',edit_users_user_path(@user),class: "btn btn-success" %>
            </div>    
        </div>
    <% end %>
    <div class="fix"></div>