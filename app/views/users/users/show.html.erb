<div class="container">
    <div class="rwo">
        <div class="col-md-7 col-md-offset-1">
            <h3>ユーザーページ</h3>
        </div>
    </div>
    <div class="rwo">
        <%= render 'info', user: @user %>
    </div>
    <% if current_user.id == @user.id %>
        <div class="row">
            <div class="col-md-7 col-md-offset-1">
                <h4>おすすめユーザー</h4>
                <table class='table'>
                    <% @recommended.each do |user| %>
                        <tr>
                            <td>
                                <%= link_to users_user_path(user.id) do %>
                                    <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
                                    <%= user.nickname %>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </table>
            </div>
        </div>
    <% end %>
</div>
