<div class="row">
  <div class="col-md-6 offset-4">
    <h2>お問合せ内容入力画面</h2>
  </div>
</div>
<%= render '/layouts/errors', obj: @contact %>
<div class="row mt-3">
  <div class="col-md-5 offset-3">
    <%= form_with model:@contact, url: users_contacts_create_path, local: :true do |f| %>
    <div class="form-group">
      <%= f.label :email, '返信先メールアドレス' %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :message, 'お問い合わせ内容' %>
      <%= f.text_area :message, size: '10x5', class: 'form-control' %>
    </div>
    <%= f.submit '送信', class: "btn btn-primary" %>
  <% end %>
  </div>
</div>